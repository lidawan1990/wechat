<view class="container">
  <view class="login-icon">
    <image class="login-img" src="../../images/logo.png"></image>
  </view>
  <view class="login-from">
    <view class="inputView">
      <image class="nameImage" src="../../images/userName.png"></image>
      <input class="inputText" placeholder="请输入手机号或用户名" bindinput="phoneInput" />
    </view>
    <view class="inputView">
      <image class="keyImage" src="../../images/password.png"></image>
      <input class="inputText" password="true" placeholder="请输入登录密码" bindinput="passwordInput" />
      <!--
      <view class='get-code' wx:if="{{!isShow}}"  bindtap='getCodeNum'>获取验证码</view>
      <view class='get-code' wx:if="{{isShow}}">{{sec}}秒后重新发送</view>
      -->
    </view>

    <!--按钮-->
    <view class="loginBtnView">
      <button class="loginBtn" size="{{primarySize}}" loading="{{loading}}" plain="{{plain}}" disabled="{{disabled}}" bindtap="login">绑定</button>
    </view>
    <view class="view-bottom">
      <text bindtap="register" class="text-bottom1">还没有账号？去注册</text>
      <text class="text-bottom">自动登录</text>
    </view>
  </view>
</view>