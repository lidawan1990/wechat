page {
  height: 100%;
  background-color: #77cbe2;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  padding: 0;
  box-sizing: border-box;
}

/*登录图片*/

.login-icon {
  flex: none;
}

.login-img {
  margin-top: 320rpx;
  margin-bottom: 45rpx;
  width:340rpx;
  height:115rpx;
  background-color: #77cbe2;
}

/*表单内容*/

.login-from {
  flex: auto;
  height: 100%;
}

.inputView {
  width:140%;
  margin-left:-30px;
  line-height: 35px;
  margin-bottom: 25px;
  border-radius: 12px;
  background-color: #d2f2fa;
}

/*输入框*/

.nameImage, .keyImage {
  margin-left: 15px;
  width: 14px;
  height: 14px;
}

.loginLab {
  margin: 15px 15px 15px 10px;
  color: #545454;
  font-size: 14px;
}

.inputText {
  flex: block;
  float: right;
  margin-top: 7px;
  color: #000;
  font-size: 14px;
  margin-right:15px;
}

/*按钮*/

.loginBtnView {
  width:140%;
  margin-left:-34px;
  height: auto;
}

.loginBtn {
  line-height: 35px;
  border-radius: 12px;
  text-align: center;
  margin-top: 10px;
  color: #fff;
  background-color: #32a4c4;
}

.text-bottom1 {
  font-size: 12px;
  color: #fff;
}

.text-bottom {
  font-size: 12px;
  color: #fff;
  margin-left:10px;

}
.view-bottom{
  margin-top:5px;
text-align:center;

}
