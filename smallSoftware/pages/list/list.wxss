page {
  display: flex;
  flex-direction: column;
  height: 100%;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.view-head {
  background-color: #f1f1f1;
  width: 100%;
  height: 18%;
}

.view-head .view-person {
  width: 100%;
  height: 60%;
  background-color: #404040;
}

.view-head .view-person .view-top {
  top:20%;
  position: relative;
}

.view-head .view-person .view-top .image-item {
  width: 30px;
  height: 30px;
  margin-left: 10px;
}

.view-head .view-person .view-top .image-item1 {
  width: 20px;
  height: 20px;
  margin-left: 24%;
  background-color: #fff;
}

.view-head .view-person .view-top .text-top {
  font-size: 24px;
  margin-left: 37%;
  color: #fff;
  height: 100%;
  display: inline-block;
  vertical-align: top;
}

.view-head .top-tab {
  background: #fff;
  color: #585050;
  font-size: 20px;
  line-height: 100rpx;
  z-index: 9999;
}

.view-head .top-tab .active {
  color: #000;
  border-bottom: solid 3px #f08519;
  padding-bottom: 8px;
}

.flex-wrp {
  display: flex;
}

.flex-tab {
  flex-flow: row nowrap;
  justify-content: space-around;
  align-items: stretch;
}

.placehold {
  font-size: 25rpx;
}

.feed-box {
  display:flex;
  width:95%;
  height:100%;
  overflow:hidden;
  background-color:#f8f8f8;
  margin:0 auto;
  border-radius:7px;
  margin-top:15rpx;
  position:relative;

}

.yuanjiao {
  position:absolute;
  top: 0;
  left: 0;
  width: 0px;
  border-top: -1px solid #f08519;
  border-left: 17px solid #f08519;
  border-bottom: 17px solid transparent;
}

.yuanjiao1 {
  position:absolute;
  top: 0;
  left: 0;
  width: 0px;
  border-top: -1px solid #47ADCA;
  border-left: 17px solid #47ADCA;
  border-bottom: 17px solid transparent;
}

.box {
  flex: 1;
  height: 100px;
  margin-top: 20px;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  background: #f8f8f8;
  padding: 0;
}

.container.withtab {
  overflow: auto;
  height: 100%;
  background:#f1f1f1;
}
.content{
  margin: 10px 3px 10px 3px;
  font-size: 14px;
}
.flex-item {
  flex-grow: 1;
  text-align: center;
  width:calc(100%/2);
}

.flex-item .badge {
  display:inline-block;
  position:relative;
  font-size:10px;
  font-weight:bold;
  color:#fff;
  vertical-align:middle;
  white-space:nowrap;
  text-align:center;
  border-radius:5px;
  min-width:20px;
  line-height:20px;
  -webkit-animation:badgeEffect 0.4s both cubic-bezier(0.12, 0.4, 0.29, 1.46);
  animation:badgeEffect 0.4s both cubic-bezier(0.12, 0.4, 0.29, 1.46);
  background-color:#f08519;
  left:5%;

}

.container .feed-item {
  width: 86%;
  height: 100%;
  padding: 20rpx 10rpx 30rpx 0rpx;
  float: left;
}

.container .feed-item .item {
  margin-bottom: 8px;
}

.container .feed-item image {
  margin-left: 10px;
}

.container .feed-item label {
  margin-left: 5px;
  display: inline-block;
}

.container .feed-item text {
  margin-left: 2px;
  overflow: hidden;
}

.container .feed-item .text-block {
  display: inline-block;
  vertical-align: top;
}

.view-footer {
  overflow: hidden;
  background-color: #f1f1f1;
  bottom: 0;
  width: 100%;
  height: 10%;
}

.text-bottom {
  color: white;
  font-size: 16px;
  line-height: 36px;
  margin-left: 7%;
}

.div-order {
  margin-left: 30px;
  background-color: #2a8df0;
  border-radius: 6px;
  height: 80rpx;
  display: inline-block;
  line-height: 35px;
  width: 40%;
}

.div-order .order {
  width: 10px;
  height: 15px;
  margin-left: 20px;
  display: inline-block;
  vertical-align: middle;
}

.div-person .image-item {
  width: 20px;
  height: 20px;
  margin-left: 20px;
  display: inline-block;
  vertical-align: middle;
}

.div-person {
  margin-left: 15px;
  background-color: #99c2ff;
  border-radius: 6px;
  height: 80rpx;
  display: inline-block;
  line-height: 35px;
  width: 40%;
}

.nameImage, .keyImage {
  margin-left: 22px;
  width: 14px;
  height: 14px;
}

.div-bottom {
  position: relative;
  bottom: -24%;
}

.feed-item image {
  width:14px;
  height:15px;
  vertical-align:middle;
}

.item-right {
  width: 12%;
  padding: 30rpx 0rpx 30rpx 5rpx;
  float: right;
  background-color: #f08519;
  flex:1;
}

.item-right text {
  width:70%;
  margin-left:5px;
  display:inline-block;
  color:#fff;
  position:relative;
  top:38%;
  word-wrap:break-word;
  font-size:18px;
  text-align:center;

}

.item-right image {
  width: 20px;
  height: 20px;
  margin-left: 5%;
  position: relative;
  top: 38%;
}

.ctnt1  .item-right {
  background-color: #47ADCA;
}

.get-code {
  text-align: center;
  margin-top: 20px;
}

.block {
  margin-top: 1px;
}
.inline-block{
  overflow: hidden;
}
.drive-left {
  float: left;
  width: clac(100%/2);
  display: inline-block;
}

.item-block {
  float: left;
  width: clac(100%/2);
  display: inline-block;
}

.textWidth {
  width:calc(100%/1.8);
